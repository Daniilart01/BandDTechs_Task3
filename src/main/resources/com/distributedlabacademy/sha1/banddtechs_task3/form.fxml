<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" minHeight="270.0" minWidth="600.0" spacing="20.0" xmlns="http://javafx.com/javafx/16"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.distributedlabacademy.sha1.banddtechs_task3.AppController">
    <padding>
        <Insets left="20.0" right="20.0" top="20.0"/>
    </padding>
    <GridPane prefHeight="271.0" prefWidth="600.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="599.6" minWidth="10.0" prefWidth="599.6"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="575.0" minWidth="0.0" prefWidth="0.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <TextArea fx:id="message" focusTraversable="false" prefHeight="200.0" prefWidth="200.0" wrapText="true">
            <font>
                <Font size="15.0"/>
            </font>
        </TextArea>
        <Button alignment="CENTER" focusTraversable="false" mnemonicParsing="false" onAction="#buttonPressed"
                text="Hash" GridPane.halignment="CENTER" GridPane.rowIndex="1"/>
        <Label fx:id="result" textFill="#3ae427" GridPane.halignment="CENTER" GridPane.rowIndex="2">
            <font>
                <Font name="System Bold" size="15.0"/>
            </font>
        </Label>
        <Label text="Result:" GridPane.rowIndex="2">
            <font>
                <Font size="22.0"/>
            </font>
        </Label>
    </GridPane>
</VBox>
